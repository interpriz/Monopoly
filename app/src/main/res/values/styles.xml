<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageRecVerticalStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">39.6dp</item>
        <item name="android:layout_weight">1.25</item>
        <item name="android:scaleType">fitXY</item>
        <item name ="android:scaleX">0.5</item>
        <item name ="android:scaleY">0.3</item>
    </style>

    <style name="ImageRecHorizontalStyle">
        <item name="android:layout_width">39.6dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_weight">1.25</item>
        <item name="android:scaleType">fitXY</item>
        <item name ="android:scaleX">0.3</item>
        <item name ="android:scaleY">0.5</item>
    </style>

    <style name="ImageSquareStyle">
        <item name="android:layout_width">39.6dp</item>
        <item name="android:layout_height">39.6dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:scaleType">fitXY</item>
        <item name ="android:scaleX">0.35</item>
        <item name ="android:scaleY">0.35</item>
    </style>

    <style name="LinLayHorizontalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">39.6dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">15.25</item>
        <item name ="android:layout_weight">2</item>
        <item name ="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LinLayVerticalStyle">
        <item name="android:layout_width">39.6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">11.25</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:layout_gravity">center_horizontal</item>
    </style>

</resources>