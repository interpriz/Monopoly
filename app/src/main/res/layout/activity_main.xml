<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/table3"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/opponents"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"

            android:weightSum="3">

            <fragment
                android:id="@+id/player_1"
                style="@style/FragPlayer"
                android:layout_weight="1"
                tools:layout="@layout/fragment_player" />

            <fragment
                android:id="@+id/player_2"
                style="@style/FragPlayer"
                android:layout_weight="1"
                tools:layout="@layout/fragment_player" />

            <fragment
                android:id="@+id/player_3"
                style="@style/FragPlayer"
                android:layout_weight="1"
                tools:layout="@layout/fragment_player" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:weightSum="15.25"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/game_field">


        <LinearLayout style="@style/LinLayHorizontalStyle">

            <fragment android:id="@+id/field20" android:name="com.example.monopoly.fragments.FieldSquare" style="@style/FragSquareStyle" tools:layout="@layout/fragment_field_square"></fragment>

            <fragment android:id="@+id/field21" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field22" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field23" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field24" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field25" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field26" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field27" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field28" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>
            <fragment android:id="@+id/field29" android:name="com.example.monopoly.fragments.FieldRecTop" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_top"></fragment>

            <fragment android:id="@+id/field30" android:name="com.example.monopoly.fragments.FieldSquare" style="@style/FragSquareStyle" tools:layout="@layout/fragment_field_square"></fragment>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="15.25"
            android:layout_weight="11.25"
            android:layout_gravity="center_horizontal">

            <LinearLayout style="@style/LinLayVerticalStyle">


                <fragment android:id="@+id/field19" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field18" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field17" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field16" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field15" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field14" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field13" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field12" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>
                <fragment android:id="@+id/field11" android:name="com.example.monopoly.fragments.FieldRecLeft" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_left"></fragment>

            </LinearLayout>

            <LinearLayout android:layout_width="258.75dp"
                android:layout_height="258.75dp"
                android:layout_weight="11.25"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/dice1"
                        android:layout_marginLeft="100dp"
                        style="@style/ImgDiceStyle"
                        android:src="@drawable/dice_6"></ImageView>

                    <ImageView

                        android:id="@+id/dice2"
                        style="@style/ImgDiceStyle"
                        android:src="@drawable/dice_6"></ImageView>

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fragment_container_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </LinearLayout>


            <LinearLayout style="@style/LinLayVerticalStyle">

                <fragment android:id="@+id/field31" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field32" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field33" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field34" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field35" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field36" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field37" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field38" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>
                <fragment android:id="@+id/field39" android:name="com.example.monopoly.fragments.FieldRecRight" style="@style/FragRecHorizontalStyle" tools:layout="@layout/fragment_field_rec_right"></fragment>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/LinLayHorizontalStyle">

            <fragment android:id="@+id/field10" android:name="com.example.monopoly.fragments.FieldSquare" style="@style/FragSquareStyle" tools:layout="@layout/fragment_field_square"></fragment>

            <fragment android:id="@+id/field9" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field8" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field7" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field6" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field5" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field4" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field3" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field2" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>
            <fragment android:id="@+id/field1" android:name="com.example.monopoly.fragments.FieldRecBottom" style="@style/FragRecVerticalStyle" tools:layout="@layout/fragment_field_rec_bottom"></fragment>

            <fragment android:id="@+id/field0" android:name="com.example.monopoly.fragments.FieldSquare" style="@style/FragSquareStyle" tools:layout="@layout/fragment_field_square"></fragment>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/yourPlayer"
                style="@style/FragPlayer"
                tools:layout="@layout/fragment_player" />

            <ImageButton
                android:id="@+id/play_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/play"
                android:onClick="pausePLayClick" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1">

            <Button
                android:id="@+id/goOutFromJail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:backgroundTint="#FF5722"
                android:onClick="goOutFromJailClick"
                android:text="Выйти из тюрьмы 50$"
                android:textSize="10dp" />

            <Button
                android:id="@+id/depositBuyBackBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FF5722"
                android:onClick="depositBuyClick"
                android:text="Заложить/выкупить собственность"
                android:textSize="10dp" />

            <Button
                android:id="@+id/buySoldHouseBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FF5722"
                android:onClick="buySoldHouseClick"
                android:text="Купить/продать дома"
                android:textSize="10dp" />

            <Button
                android:id="@+id/debtsBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FF5722"
                android:onClick="debtClick"
                android:text="Долги"
                android:textSize="10dp" />

            <Button
                android:id="@+id/moveBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#FF5722"
                android:onClick="moveClick"
                android:text="Сделать ход"
                android:textSize="10dp"/>


        </GridLayout>
    </LinearLayout>




</LinearLayout>