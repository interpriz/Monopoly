<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE6D0"
    android:orientation="vertical"
    tools:context=".fragments.SoldBuyProperty">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Выберите собственность"
        android:textAlignment="center"
        android:fontFamily="@font/segoepr"
        android:textColor="@color/dark_blue">

    </TextView>

    <Spinner
        android:id="@+id/dropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/depositBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Заложить"
        android:backgroundTint="@color/dark_blue"/>

    <Button
        android:id="@+id/buyBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Выкупить"
        android:backgroundTint="@color/dark_blue"/>

</LinearLayout>